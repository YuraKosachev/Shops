@model Shops.Models.ProductViewModel

@{
    ViewBag.Title = "AddProduct";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Add product</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ShopId)
            <fieldset class="form-group">
                @Html.LabelFor(model => model.ProductName)
                @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductName)
            </fieldset>
            <fieldset class="form-group">
                @Html.LabelFor(model => model.ProductDescription)
                @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ProductName)*@
            </fieldset>
            <button type="submit" class="btn btn-primary right">Create</button>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", "Home")
        </div>
    </div>
</div>
